<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:title="@string/settings_name">

    <SwitchPreferenceCompat
        android:key="keyPress"
        android:title="Vibrate on key press"
        android:defaultValue="true"/>

    <DropDownPreference
        android:key="mockingMode"
        android:title="Mocking Mode"
        android:entries="@array/mockingModeEntries"
        app:useSimpleSummaryProvider="true"
        android:entryValues="@array/mockingModeEntry_values"/>
</androidx.preference.PreferenceScreen>